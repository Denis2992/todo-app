      "@todo-react/shared-ui-form-input": [
        "libs/todo-react/shared/ui-form-input/src/index.ts"
      ],
      "@todo-react/shell": ["libs/todo-react/shell/src/index.ts"],
      "@todo-react/todo-feature": ["libs/todo-react/todo/feature/src/index.ts"],
      "@todo-react/ui-checkbox": [
        "libs/todo-react/todo/ui-checkbox/src/index.ts"
      ],
      "@todo-react/ui-filter-bar": [
        "libs/todo-react/todo/ui-filter-bar/src/index.ts"
      ],
      "@todo-react/ui-todo-input": [
        "libs/todo-react/todo/ui-todo-input/src/index.ts"
      ],
      "@todo-react/ui-todo-item": [
        "libs/todo-react/todo/ui-todo-item/src/index.ts"
      ],
      "todo-api/todo": ["libs/todo-server/todo-api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
