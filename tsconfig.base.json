{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/domain": ["libs/shared/domain/src/index.ts"],
      "@shared/styles": ["libs/shared/styles/src/index.ts"],
      "@todo-react/auth-feature": ["libs/todo-react/auth/feature/src/index.ts"],
      "@todo-react/auth-feature-login": [
        "libs/todo-react/auth/feature-login/src/index.ts"
      ],
      "@todo-react/auth-feature-sign-up": [
        "libs/todo-react/auth/feature-sign-up/src/index.ts"
      ],
      "@todo-react/feature-todo-list": [
        "libs/todo-react/todo/feature-todo-list/src/index.ts"
      ],
      "@todo-react/shared-domain": [
        "libs/todo-react/shared/domain/src/index.ts"
      ],
      "@todo-react/shared-feature-header": [
        "libs/todo-react/shared/feature-header/src/index.ts"
      ],
      "@todo-react/shared-store": ["libs/todo-react/shared/store/src/index.ts"],
      "@todo-react/shared-ui-button": [
        "libs/todo-react/shared/ui-button/src/index.ts"
